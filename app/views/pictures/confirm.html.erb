<div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
        <h3>以下の内容で、送信する。</h3>
        <%= form_for(@picture) do |f| %>
            <%= f.hidden_field :comment %>
            <%= f.hidden_field :image_cache %>
            <p><%= image_tag @picture.image.url if @picture.image.present?%></p>
            <p>コメント:<%= @picture.comment %></p>
            <%= f.submit "登録", class: 'btn btn-primary btn-block'%>
        <% end %>

        <%= form_for(@picture, url: new_picture_path, method:'get') do |f| %>
            <%= f.hidden_field :comment %>
            <%= f.hidden_field :image_cache %>
            <%= f.submit "戻る", name: 'back', class: 'btn btn-default btn-block' %>
        <% end %>
    </div>
</div>
